<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coin"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="gone"
    tools:visibility="visible">

    <ImageView
        android:id="@+id/ivCoin"
        style="@style/CEDividerHolderCountry"
        android:layout_width="@dimen/coin_image_width"
        android:layout_height="@dimen/coin_image_width"
        android:contentDescription="@string/coin_contentdescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_launcher_foreground" />

    <View
        android:id="@+id/dOwned"
        android:layout_width="@dimen/coin_image_width"
        android:layout_height="@dimen/coin_owned_bar_height"
        android:background="@color/coin_no_owned"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivCoin" />

    <TextView
        android:id="@+id/tvValue"
        style="@style/CETextCoinCountryValueAtImageBottom"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dOwned"
        tools:text="0.05â‚¬" />

</androidx.constraintlayout.widget.ConstraintLayout>