<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Font -->
    <style name="CETitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CESubtitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CEText">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>


    <!-- TextView -->
    <style name="CETextViewHolderCountry" parent="CESubtitle">
        <item name="android:paddingLeft">@dimen/CETextHolderCountryPaddingLeft</item>
        <item name="android:paddingTop">@dimen/CETextHolderCountryPaddingTop</item>
        <item name="android:paddingBottom">@dimen/CETextHolderCountryPaddingBottom</item>
    </style>

    <style name="CETextCoinCountryValueAtImageBottom" parent="CESubtitle">
        <item name="android:layout_width">@dimen/coin_image_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CETextViewCountryCardViewHolder" parent="CESubtitle">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CETextViewCountCardViewHolder" parent="CEText">
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="CETextViewCoinValueCardViewHolder" parent="CESubtitle">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="CETextViewStatisticsTitleCardViewHolder" parent="CETitle">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="CETextViewStatisticsTextCardViewHolder" parent="CESubtitle">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- Other -->
    <style name="CEDividerHolderCountry">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="CEImageViewHolderCountry">
        <item name="android:paddingRight">@dimen/CEImageViewHolderCountryPaddingRight</item>
        <item name="android:paddingTop">@dimen/CEImageViewHolderCountryPaddingTop</item>
        <item name="android:paddingBottom">@dimen/CEImageViewHolderCountryPaddingBottom</item>
    </style>

    <style name="CEImageViewCountryCoin">
        <item name="android:layout_width">@dimen/coin_image_width</item>
        <item name="android:layout_height">@dimen/coin_image_height</item>
    </style>

    <style name="CEImageViewFlagCardViewHolder">
        <item name="android:layout_width">@dimen/flag_image_width</item>
        <item name="android:layout_height">@dimen/flag_image_height</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="CECardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="android:layout_marginLeft">@dimen/CEDefaultMarginLeft
        </item>
        <item name="android:layout_marginTop">@dimen/CEDefaultMarginTop</item>
        <item name="android:layout_marginRight">@dimen/CEDefaultMarginTop</item>
        <item name="android:layout_marginBottom">@dimen/CEDefaultMarginBottom</item>
    </style>

    <style name="CECardViewCountryCardViewHolder" parent="CECardView">
        <item name="android:layout_marginLeft">@dimen/CECardViewCountryCardViewHolderMarginLeft
        </item>
        <item name="android:layout_marginTop">@dimen/CECardViewCountryCardViewHolderMarginTop</item>
        <item name="android:layout_marginRight">@dimen/CECardViewCountryCardViewHolderMarginRight
        </item>
        <item name="android:layout_marginBottom">
            @dimen/CECardViewCountryCardViewHolderMarginBottom
        </item>
    </style>

    <style name="CEImageViewCoinCardViewHolder">
        <item name="android:layout_width">@dimen/coin_image_width</item>
        <item name="android:layout_height">@dimen/coin_image_height</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="CECardViewCoinCardViewHolder" parent="CECardView">
        <item name="android:layout_marginLeft">@dimen/CECardViewCountryCardViewHolderMarginLeft
        </item>
        <item name="android:layout_marginTop">@dimen/CECardViewCountryCardViewHolderMarginTop</item>
        <item name="android:layout_marginRight">@dimen/CECardViewCountryCardViewHolderMarginRight
        </item>
        <item name="android:layout_marginBottom">
            @dimen/CECardViewCountryCardViewHolderMarginBottom
        </item>
    </style>

    <style name="CECardViewStatisticsCardViewHolder" parent="CECardView">
        <item name="android:layout_marginLeft">@dimen/CECardViewStatisticsCardViewHolderMarginLeft
        </item>
        <item name="android:layout_marginTop">@dimen/CECardViewStatisticsCardViewHolderMarginTop
        </item>
        <item name="android:layout_marginRight">@dimen/CECardViewStatisticsCardViewHolderMarginRight
        </item>
        <item name="android:layout_marginBottom">
            @dimen/CECardViewStatisticsCardViewHolderMarginBottom
        </item>
    </style>

    <style name="CEViewDividerCoinCardViewHolder">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">@dimen/coin_image_width</item>
        <item name="android:layout_height">@dimen/coin_owned_bar_height</item>
    </style>

    <!-- Toolbars -->

    <style name="CEToolBarMainActivity">
        <item name="android:elevation">4dp</item>
        <item name="android:background">@color/primary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="CETextViewTitleToolBarMainActivity" parent="CETitle">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>